<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.text.TextUtils" />
        <import type="android.view.View" />

        <variable
            name="item"
            type="com.casecode.domain.model.users.Item" />
        <variable
            name="isLoading"
            type="Boolean" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/text_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/larger_spacing"
            android:text="@{item == null ? @string/add_item : @string/update_item}"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.Toolbar.Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imv_item"
            android:layout_width="@dimen/size_image"
            android:layout_height="@dimen/size_image"
            android:layout_marginStart="@dimen/small_spacing"
            android:layout_marginTop="@dimen/larger_spacing"
            android:scaleType="centerCrop"
            app:error="@{@drawable/outline_hide_image_24}"
            app:imageUrl="@{item.imageUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_item_title"
            app:placeholder="@{@drawable/outline_image_24}"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:srcCompat="@drawable/outline_image_24" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_barcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_spacing"
            android:layout_marginEnd="@dimen/small_spacing"
            android:enabled="@{item == null ? true : false}"
            android:hint="@string/barcode"
            app:layout_constraintEnd_toStartOf="@+id/image_button_scan_barcode"
            app:layout_constraintStart_toStartOf="@+id/gl_item_start"
            app:layout_constraintTop_toBottomOf="@+id/imv_item"
            app:startIconDrawable="@drawable/ic_code">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="13"
                android:maxLines="1"
                android:text="@{item == null ? null : item.sku}" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/image_button_scan_barcode"
            android:layout_width="@dimen/size_image_button"
            android:layout_height="@dimen/size_image_button"
            android:background="@android:color/transparent"
            android:contentDescription="@string/scan_barcode"
            android:foreground="@drawable/ripple_effect"
            android:visibility="@{item == null ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/til_barcode"
            app:layout_constraintEnd_toStartOf="@+id/gl_item_end"
            app:layout_constraintTop_toTopOf="@+id/til_barcode"
            app:srcCompat="@drawable/enter_barcode" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing"
            android:hint="@string/name"
            app:layout_constraintEnd_toStartOf="@+id/gl_item_end"
            app:layout_constraintStart_toStartOf="@+id/til_barcode"
            app:layout_constraintTop_toBottomOf="@+id/til_barcode"
            app:startIconDrawable="@drawable/outline_inventory_2_24">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"

                android:text="@{item == null ? null : item.name}" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing"
            android:layout_marginEnd="@dimen/small_spacing"
            android:hint="@string/price"
            app:layout_constraintEnd_toStartOf="@+id/til_quantity"
            app:layout_constraintStart_toStartOf="@+id/til_name"
            app:layout_constraintTop_toBottomOf="@+id/til_name"
            app:startIconDrawable="@drawable/baseline_attach_money_24">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number|numberDecimal"

                android:text="@{item == null ? null : String.valueOf(item.price)}" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing"
            android:hint="@string/quantity"
            app:layout_constraintEnd_toEndOf="@+id/til_name"
            app:layout_constraintStart_toEndOf="@+id/til_price"
            app:layout_constraintTop_toBottomOf="@+id/til_name"
            app:startIconDrawable="@drawable/baseline_view_module_24">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number|numberDecimal"
                android:text="@{item == null ? null : String.valueOf(item.quantity)}" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/lpi_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_spacing"
            android:layout_marginTop="@dimen/normal_spacing"
            android:layout_marginEnd="@dimen/small_spacing"
            android:indeterminate="true"
            android:visibility="@{isLoading ? View.VISIBLE: View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/til_price" />

        <Button
            android:id="@+id/btn_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_spacing"
            android:layout_marginBottom="@dimen/normal_spacing"
            android:enabled="@{!isLoading}"
            android:text="@{item == null ? @string/add_item : @string/update_item}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gl_item_end"
            app:layout_constraintStart_toStartOf="@+id/gl_item_start"
            app:layout_constraintTop_toBottomOf="@+id/lpi_item" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_item_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/small_spacing" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_item_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/small_spacing" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>