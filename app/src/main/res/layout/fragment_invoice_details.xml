<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <import type="java.util.List" />
        <import type="java.text.DateFormat" />

        <import type="com.casecode.domain.model.users.Invoice" />
        <variable
            name="isLoading"
            type="Boolean" />
        <variable
            name="invoice"
            type="Invoice" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.invoices.InvoiceDetailsFragment">

        <TextView
            android:id="@+id/tv_invoice_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/normal_spacing"
            android:layout_marginTop="@dimen/normal_spacing"
            android:visibility="@{isLoading ? View.GONE: View.VISIBLE}"
            android:paddingEnd="@dimen/small_spacing"
            android:paddingBottom="@dimen/small_spacing"
            android:text="@{invoice.date.toLocaleString() + @string/invoice_group_total(String.valueOf(invoice.total))}"
            android:textAppearance="@style/TextAppearance.pos.BodyLarge"
            android:textColor="@color/md_theme_light_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2021-01-01 | 500 EGP" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_invoice_details"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/small_spacing"
            android:visibility="@{isLoading ? View.GONE: View.VISIBLE}"

            app:bindListInvoiceItems="@{invoice.items}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_invoice_details"
            tools:listitem="@layout/item_sale" />
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/cpb_invoice_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="@{isLoading ? View.VISIBLE: View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>